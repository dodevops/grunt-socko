{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "noEmitOnError": true,
        "target": "es6",
        "declaration": true
    },
    "include": [
        "tasks/**/*.ts",
        "lib/**/*.ts",
        "test/**/*.ts"
    ],
    "exclude": [
        "tasks/**/*.d.ts",
        "lib/**/*.d.ts",
        "test/**/*.d.ts"
    ]
}